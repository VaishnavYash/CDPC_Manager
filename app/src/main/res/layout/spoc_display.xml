<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#F7F1E5"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:paddingVertical="10dp"
        android:paddingTop="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Company :"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/company_name_spoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="15dp"
                android:text = "CHEGG"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="15dp"
                android:text = "HR Name :"/>
            <TextView
                android:id="@+id/HR_name_spoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="15dp"
                android:text = "HR Name "
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "HR Email :"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/HREmails_Spoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="15dp"
                android:text = "HR EMail"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Role :"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/role_spoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="15dp"
                android:text = "SDE"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Remarks:"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="15dp"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/remark_spoc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="15dp"
                android:hint = "Remark"
                />


        </LinearLayout>
        <Button
            android:id="@+id/remark_Btn"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Remarks"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>